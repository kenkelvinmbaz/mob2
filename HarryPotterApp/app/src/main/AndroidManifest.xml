<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exemplo.harrypotterapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        
        <!-- Dashboard Activity (Main) -->
        <activity
            android:name=".activities.DashboardActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Character by ID Activity -->
        <activity
            android:name=".activities.CharacterByIdActivity"
            android:parentActivityName=".activities.DashboardActivity" />

        <!-- Staff Activity -->
        <activity
            android:name=".activities.StaffActivity"
            android:parentActivityName=".activities.DashboardActivity" />

        <!-- Students by House Activity -->
        <activity
            android:name=".activities.StudentsByHouseActivity"
            android:parentActivityName=".activities.DashboardActivity" />
    </application>

</manifest>
