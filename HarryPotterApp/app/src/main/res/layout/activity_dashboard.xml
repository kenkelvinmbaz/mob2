<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- Título do App -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="32dp" />

    <!-- Botão Buscar Personagem por ID -->
    <Button
        android:id="@+id/btnCharacterById"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_character_by_id"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white" />

    <!-- Botão Listar Professores -->
    <Button
        android:id="@+id/btnListStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_list_staff"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white" />

    <!-- Botão Listar Estudantes por Casa -->
    <Button
        android:id="@+id/btnStudentsByHouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_students_by_house"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white" />

    <!-- Botão Sair -->
    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_exit"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white" />
        
</LinearLayout>
